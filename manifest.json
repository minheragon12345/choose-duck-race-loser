{
  "manifest_version": 3,
  "name": "Choose Duck Race Winner",
  "author": "Trần Minh Sáng",
  "version": "1.0",
  "description": "Extension allows you to choose the winner of the Duck Race game using JavaScript",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.online-stopwatch.com/duck-race/*"],
      "js": ["content.js", "override.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["override.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
